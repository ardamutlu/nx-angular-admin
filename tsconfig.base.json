      "@m-benz/cars/feature/car-list": [
        "libs/cars/feature/car-list/src/index.ts"
      ],
      "@m-benz/core/error-handler": ["libs/core/error-handler/src/index.ts"],
      "@m-benz/core/http-client": ["libs/core/http-client/src/index.ts"],
      "@m-benz/data-models": ["libs/data-models/index.ts"],
      "@m-benz/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
